using System;

class Investimento
{
    public double CapitalInicial { get; set; }
    public double TaxaJuros { get; set; }

    public Investimento(double capitalInicial, double taxaJuros)
    {
        CapitalInicial = capitalInicial;
        TaxaJuros = taxaJuros;
    }

    public void CalcularRendimentos(int meses, int resgateMes, double dias)
    {
        double capitalAtual = CapitalInicial;
        double totalRendimento = 0;
        double rendimentoResgatado = 0;

        Console.WriteLine("\n| Mês | Capital Inicial | Rendimento Mensal | Capital Final |");

        for (int mes = 1; mes <= meses; mes++)
        {
            double rendimentoMensal = capitalAtual * TaxaJuros;
            capitalAtual += rendimentoMensal; // Atualiza o capital com o rendimento

            // Realiza o resgate no 5º mês
            if (mes == resgateMes)
            {
                rendimentoResgatado = rendimentoMensal; // Armazena o rendimento resgatado
                capitalAtual -= rendimentoResgatado; // Resgata o rendimento
                Console.WriteLine($"| {mes,3} | {capitalAtual - rendimentoMensal,14:F2} | {rendimentoMensal,18:F2} | {capitalAtual,14:F2} | (Rendimento resgatado)");
            }
            else
            {
                Console.WriteLine($"| {mes,3} | {capitalAtual - rendimentoMensal,14:F2} | {rendimentoMensal,18:F2} | {capitalAtual,14:F2} |");
            }

            totalRendimento += rendimentoMensal;
        }

        // Cálculo para os 10 dias finais
        double taxaDiaria = TaxaJuros / 30; // Aproximando a taxa diária
        double rendimentoDias = capitalAtual * taxaDiaria * dias;
        capitalAtual += rendimentoDias; // Atualiza o capital com o rendimento dos 10 dias
        totalRendimento += rendimentoDias; // Acumula o rendimento total

        Console.WriteLine($"| Total | {CapitalInicial,14:F2} | {totalRendimento,18:F2} | {capitalAtual,14:F2} |");
    }
}

class Program
{
    static void Main()
    {
        // Entradas
        double[] capitais = { 1000, 5500, 12000 };
        double[] taxas = { 0.03, 0.0248, 0.02 };
        int meses = 8;
        double dias = 10;
        int resgateMes = 5;

        // Processar cada investimento
        for (int i = 0; i < capitais.Length; i++)
        {
            Investimento investimento = new Investimento(capitais[i], taxas[i]);
            Console.WriteLine($"\nInvestimento {i + 1} (Capital: {capitais[i]:C}, Taxa: {taxas[i] * 100:F2}%)");
            investimento.CalcularRendimentos(meses, resgateMes, dias);
        }
    }
}
